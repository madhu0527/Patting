<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back" >

   <!-- <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="How It Works"
        android:textColor="#0C16C9"
        android:textSize="20dp" />-->

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/man"
                android:layout_width="150dp"
                android:layout_height="156dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/man" />

            <ImageView
                android:id="@+id/dog"
                android:layout_width="60dp"
                android:layout_height="76dp"
                android:layout_alignBottom="@+id/man"
                android:layout_alignRight="@+id/man"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:src="@drawable/sad" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dog"
                android:layout_toRightOf="@+id/man"
                android:text="---->"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#A52A2A" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dog"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView1"
                android:src="@drawable/cloudd" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/man"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/last" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dog"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginTop="18dp"
                android:text="paTTing"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text=" is the solution"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="15dp"
                android:src="@drawable/homepage" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginTop="26dp"
                android:layout_toRightOf="@+id/imageView3"
                android:text="    John opens the patting app on his smartphone."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/imageView3"
                android:text="    Click on Post free ad and start filling out the relevant details about the dog for adoption."
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView8"
                android:layout_marginRight="5dp"
                android:layout_marginTop="25dp"
                android:paddingBottom="20dp"
                android:src="@drawable/gill" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/imageView5"
                android:text="Sarah who also has patting app and wants to adopt a dog  find out about John post under adoption category in the home page of app.  "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="15dp"
                android:paddingBottom="20dp"
                android:src="@drawable/dogg" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/imageView7" >

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="					Max is now happy with his new owner."
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView88"
                    android:layout_marginTop="10dp"
                    android:text="		Stop wagging your tail max. "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ff0000" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>